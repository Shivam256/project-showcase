<link rel="stylesheet" href="/styles/flash.css">

<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show success-flash"  role="alert">
    <strong><%= success  %> </strong> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show error-flash" role="alert">
    <strong><%= error  %> </strong> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>


